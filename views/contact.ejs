<h2 class="section-title">Contact Me</h2> <!-- section heading for the contact form -->

<div class="card p-4 mx-auto" style="max-width: 600px;"> <!-- card container centered with padding and a max width -->
  <form action="/contact" method="POST"> <!-- form posts to /contact route using POST to submit data securely -->

    <!-- name section-->
    <div class="mb-3"> <!-- margin-bottom utility to space form groups -->
      <label for="name" class="form-label">Full Name</label> <!-- label tied to the name input for accessibility -->
      <input type="text" id="name" name="name" class="form-control" required> <!-- text input for the user's full name -->
    </div> 

    <!-- email section -->
    <div class="mb-3"> <!-- email form group with spacing -->
      <label for="email" class="form-label">Email</label> <!-- label for email input -->
      <input type="email" id="email" name="email" class="form-control" required> <!-- email input type enforces basic email format -->
    </div> 

    <!-- phone number section --> 
    <div class="mb-3"> <!-- phone # form group -->
      <label for="phone" class="form-label">Phone Number</label> <!-- label for phone input -->
      <input type="tel" id="phone" name="phone" class="form-control" pattern="[0-9]{10}" required> <!-- Telephone input with a pattern requiring exactly 10 digits (adjust pattern for different formats) -->
    </div> <!-- End phone form group -->


    <!-- message section --> 
    <div class="mb-3"> <!-- message textarea form group -->
      <label for="message" class="form-label">Message</label> <!-- label for the message textarea -->
      <textarea id="message" name="message" rows="4" class="form-control" required></textarea> <!-- multi-line text field for the message; rows sets visible height and required enforces input -->
    </div> 

    <button type="submit" class="btn btn-primary w-100">Send Message</button> <!-- submit button styled with bootstrap -->
  </form> 
</div> 
