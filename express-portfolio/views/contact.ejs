<main>
  <section class="contact">
    <h1>Contact Me</h1>
    <p>If you’d like to reach out, please fill in the form below. I’ll respond as soon as possible.</p>

    <form action="#" method="post" onsubmit="return validateForm()">
      <label for="name">Full Name</label>
      <input type="text" id="name" name="name" placeholder="Enter your name" required>

      <label for="email">Email Address</label>
      <input type="email" id="email" name="email" placeholder="Enter your email" required>

      <label for="phone">Cell Number</label>
      <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" placeholder="1234567890" required>

      <label for="message">Message</label>
      <textarea id="message" name="message" rows="5" placeholder="Your message here..." required></textarea>

      <button type="submit">Send Message</button>
    </form>
  </section>
</main>

<footer>
  <p>Contact: <a href="mailto:charmchristal.guarde@ontariotechu.net">charmchristal.guarde@ontariotechu.net</a></p>
  <p>&copy; 2025 Charm Guarde</p>
</footer>

<script>
  function validateForm() {
    const phone = document.getElementById('phone').value;
    if (!/^[0-9]{10}$/.test(phone)) {
      alert('Please enter a valid 10-digit phone number.');
      return false;
    }
    alert('Message sent successfully!');
    return true;
  }
</script>
